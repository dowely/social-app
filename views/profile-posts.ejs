<%- include('./partials/header') %>

<div class="container py-md-5 container--narrow">

  <%- include('./partials/flash') %>

  <%- include('./partials/profileNav') %>

  <div class="list-group">
    
    <% posts.forEach(post => { %>
      <a href="/posts/<%= post._id %>" class="list-group-item list-group-item-action">
        <img class="avatar-tiny" src="<%= post.authorAvatar %>">
        <strong><%= post.title %></strong> on <%= post.createDate.getMonth() + 1 %>/<%= post.createDate.getDate()%>/<%= post.createDate.getFullYear()%>
      </a>
    <% }) %>

  </div>
</div>

<%- include('./partials/footer') %>

