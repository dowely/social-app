  <%- include('./partials/header') %>
  
  <div class="container py-md-5 container--narrow">

    <%- include('./partials/flash') %>

    <% if(posts.length) { %>
      <h1 class="text-center mb-4">These are the latest posts<br>from those you follow</h1>
      <div class="list-group">
    
        <% posts.forEach(post => { %>
          <a href="/posts/<%= post._id %>" class="list-group-item list-group-item-action">
            <img class="avatar-tiny" src="<%= post.authorAvatar %>">
            <strong><%= post.title %></strong><span class="text-muted small"> by <%= post.authorName %> on <%= post.createDate.getMonth() + 1 %>/<%= post.createDate.getDate()%>/<%= post.createDate.getFullYear()%></span>
          </a>
        <% }) %>
    
      </div>
    <% } else { %>
      <div class="text-center">
        <h2>Hello <strong><%= user.username %></strong>, your feed is empty.</h2>
        <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
      </div>
    <% } %>  
  </div>
  
  <%- include('./partials/footer') %>